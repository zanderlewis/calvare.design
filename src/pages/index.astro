---
import Layout from "../layouts/Layout.astro";
import HtmlPageButtons from "../components/HtmlPageButtons.astro";
import ContactCard from "../components/ContactCard.astro";

import home from "../data/home.json";
import contact from "../data/contact.json";

const contacts = contact.contacts;
const contactsCount = Object.keys(contacts).length;
const numContacts = 
  contactsCount > 3 ? 3 :
  contactsCount;
const contactGridCols =
  numContacts === 1 ? 'grid-cols-1' :
  numContacts === 2 ? 'grid-cols-2' :
  'grid-cols-3';
---

<Layout title="Calvare - Digital Creator">
  <main class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 text-white relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-purple-500/10 to-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-br from-purple-500/5 to-blue-500/5 rounded-full blur-3xl animate-pulse delay-500"></div>
    </div>

    <!-- Content Container -->
    <div class="container mx-auto px-6 py-20 relative z-10 max-w-6xl">
      <!-- Hero Section -->
      <div class="text-center mb-32 relative">
        <!-- Profile Image with Animated Ring -->
        <div class="relative inline-block mb-10">
          <div class="absolute -inset-4 bg-gradient-to-r from-purple-500 via-blue-500 to-purple-500 rounded-full opacity-75 blur-lg animate-spin-slow"></div>
          <div class="relative">
            <img
              src="/profile-photo.png"
              alt="Calvare Profile Photo"
              class="w-40 h-40 rounded-full shadow-2xl border-4 border-white/10 relative z-10"
            />
          </div>
        </div>

        <!-- Name and Title -->
        <h1 class="text-6xl md:text-7xl font-black mb-6 bg-gradient-to-r from-purple-400 to-blue-400 text-transparent bg-clip-text tracking-tight">
          Calvare
        </h1>
        <p class="text-xl md:text-2xl text-slate-400 mb-12 font-light tracking-wide max-w-2xl mx-auto">
          {home.content.description}
        </p>
        
        <!-- Call to Action Buttons -->
        <div class="flex flex-wrap justify-center gap-4 mb-16">
          <a href="#about" class="px-8 py-4 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 rounded-xl text-white font-semibold transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-purple-500/25">
            Learn More
          </a>
          <a href="#contact" class="px-8 py-4 bg-white/5 hover:bg-white/10 rounded-xl text-white font-semibold transition-all duration-300 hover:scale-105 backdrop-blur-sm">
            Get In Touch
          </a>
        </div>
      </div>

      <!-- Features Grid -->
      <div class="grid lg:grid-cols-3 gap-8 mb-32">
        <div class="group relative p-8 rounded-xl hover:bg-white/5 transition-all duration-300 hover:scale-105">
          <div class="text-5xl mb-6 text-center">ðŸŽ®</div>
          <h3 class="text-xl font-bold mb-4 text-minecraft text-center">Minecraft Creator</h3>
          <p class="text-slate-400 leading-relaxed text-center">Building immersive worlds and creating engaging content for the Minecraft community.</p>
        </div>

        <div class="group relative p-8 rounded-xl hover:bg-white/5 transition-all duration-300 hover:scale-105">
          <div class="text-5xl mb-6 text-center">ðŸŽµ</div>
          <h3 class="text-xl font-bold mb-4 text-soundcloud text-center">Music Producer</h3>
          <p class="text-slate-400 leading-relaxed text-center">Crafting unique soundscapes and melodies that resonate with listeners worldwide.</p>
        </div>

        <div class="group relative p-8 rounded-xl hover:bg-white/5 transition-all duration-300 hover:scale-105">
          <div class="text-5xl mb-6 text-center">ðŸ’»</div>
          <h3 class="text-xl font-bold mb-4 text-scratch text-center">Scratch Developer</h3>
          <p class="text-slate-400 leading-relaxed text-center">Creating interactive games and educational content using visual programming.</p>
        </div>
      </div>

      <!-- About Section -->
      <section id="about" class="mb-32">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-12 bg-gradient-to-r from-purple-400 to-blue-400 text-transparent bg-clip-text">About Me</h2>
          <div class="p-8 md:p-12 rounded-xl">
            <p class="text-lg text-slate-300 leading-relaxed">
              {home.content.about}
            </p>
          </div>
        </div>
      </section>

      <!-- Projects Section -->
      <section class="mb-32">
        <h2 class="text-4xl md:text-5xl font-bold text-center mb-12 bg-gradient-to-r from-purple-400 to-blue-400 text-transparent bg-clip-text">Featured Projects</h2>
        <div class="max-w-4xl mx-auto">
          <HtmlPageButtons />
        </div>
      </section>

      <!-- Contact Section -->
      <section id="contact" class="mb-32">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-12 bg-gradient-to-r from-purple-400 to-blue-400 text-transparent bg-clip-text">Get In Touch</h2>
          <div class="p-8 rounded-xl">
            <div class={`grid ${contactGridCols} gap-6 justify-items-center`}>
              <ContactCard
                method={contacts.email.type}
                value={contacts.email.data}
                href={contacts.email.link}
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  />
                </svg>
              </ContactCard>
            </div>
          </div>
        </div>
      </section>

      <!-- Social Links -->
      <section class="text-center">
        <h3 class="text-2xl font-semibold mb-8 text-slate-300">Connect With Me</h3>
        <div class="flex flex-wrap justify-center gap-6 max-w-2xl mx-auto">
          <!-- SoundCloud -->
          <a
            href="https://soundcloud.com/midnightsongs"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="SoundCloud"
            class="group inline-flex items-center gap-3 px-6 py-3 rounded-xl text-white font-medium transition-all duration-300 hover:scale-105 bg-orange-400 hover:bg-orange-400/80 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-900 focus-visible:ring-white/60 shadow-sm shadow-black/20"
          >
            <span class="transition-transform duration-300 group-hover:scale-110 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24">
                <path fill="currentColor" d="M 14.5 6 C 12.601563 6 11 6.90625 10 8.40625 L 10 17 L 20.5 17 C 22.398438 17 24 15.398438 24 13.5 C 24 11.601563 22.398438 10 20.5 10 C 20.300781 10 20.011719 9.992188 19.8125 10.09375 C 19.210938 7.695313 17 6 14.5 6 Z M 8 8 L 8 17 L 9 17 L 9 8.09375 C 8.699219 7.992188 8.300781 8 8 8 Z M 7 8.09375 C 6.601563 8.195313 6.300781 8.398438 6 8.5 L 6 17 L 7 17 Z M 5 9.40625 C 4.5 9.90625 4.195313 10.488281 4.09375 11.1875 L 4 11.1875 L 4 17 L 5 17 Z M 3 11 C 2.601563 11 2.300781 11.085938 2 11.1875 L 2 16.8125 C 2.300781 16.914063 2.601563 17 3 17 Z M 1 11.8125 C 0.398438 12.3125 0 13.101563 0 14 C 0 14.898438 0.398438 15.6875 1 16.1875 Z" />
              </svg>
            </span>
            <span>SoundCloud</span>
          </a>

          <!-- Scratch -->
          <a
            href="https://scratch.mit.edu/users/Calvare"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Scratch"
            class="group inline-flex items-center gap-3 px-6 py-3 rounded-xl text-white font-medium transition-all duration-300 hover:scale-105 bg-yellow-600 hover:bg-yellow-600/80 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-900 focus-visible:ring-white/60 shadow-sm shadow-black/20"
          >
            <span class="transition-transform duration-300 group-hover:scale-110 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 48 48">
                <path fill="#42a5f5" d="M18.662,44.354c-4.418,0-8-3.582-8-8v-7.393c-0.026-0.58-0.014-1.132,0.032-1.644 c0.133-1.485,0.665-2.843,1.482-3.972c-0.979-2.99-0.706-5.696-0.556-6.666c0.817-5.455,4.855-10.804,11.122-11.116 c1.448-1.237,3.353-1.985,5.396-1.914c4.416,0.11,7.907,3.78,7.797,8.197c0,0.033-0.084,3.438-0.084,8.122 c0,0.826-0.125,1.624-0.358,2.375c1.223,1.899,1.729,3.9,1.817,5.508c0.135,1.69,0.069,5.617-2.776,9.071 c-1.536,1.864-4.38,4.153-9.198,4.467c-0.161,0.01-0.32,0.019-0.478,0.025C23.391,43.209,21.16,44.354,18.662,44.354z" />
                <path fill="#fff" d="M32.99,35.65c-1.28,1.56-3.68,3.48-7.78,3.74c-0.47,0.03-0.94,0.05-1.39,0.04 c-1.08,1.79-3.03,2.92-5.16,2.92c-3.31,0-6-2.69-6-6v-7.56c-0.02-0.54,0-1.01,0.03-1.29c0.12-1.43,0.76-2.76,1.78-3.76 c-1.34-3-1.01-5.92-0.87-6.8c0.7-4.57,4.04-9.39,9.75-9.39h0.2c1.14-1.22,2.74-1.9,4.46-1.9h0.06c1.62,0.04,3.11,0.7,4.22,1.86 c1.1,1.16,1.69,2.68,1.65,4.29c-0.03,1.19-0.09,4.25-0.09,8.17c0,0.93-0.21,1.84-0.62,2.67c1.81,2.24,2.07,4.55,2.09,5.49 C35.41,29.4,35.37,32.77,32.99,35.65z" />
                <path fill="#fb8c00" d="M18.662,37.354c-0.553,0-1-0.447-1-1v-7.7c-0.021-0.409,0-0.677,0.004-0.711 c0.048-0.533,0.505-0.94,1.041-0.91c0.534,0.023,0.955,0.464,0.955,0.999v0.571c0.04,0.652,0.234,1.831,1.077,2.687 c0.847,0.861,2.198,1.243,4.014,1.119c1.289-0.084,2.243-0.49,2.835-1.209c0.919-1.114,0.747-2.679,0.745-2.694 c-0.009-0.068-0.01-0.139-0.005-0.208c0.002-0.073,0.024-2.324-4.46-3.095c-1.906-0.327-3.346-1.169-4.278-2.503 c-1.53-2.187-1.065-4.876-1.045-4.989c0.268-1.831,1.667-5.307,5.02-5.155c1.514,0.072,2.577,0.631,3.331,1.437 c0.021-1.474,0.043-2.353,0.043-2.37c0.014-0.543,0.459-0.975,1-0.975c0.008,0,0.017,0,0.025,0 c0.552,0.014,0.988,0.473,0.975,1.025c-0.001,0.034-0.087,3.513-0.087,8.297c0,0.532-0.417,0.972-0.948,0.999 c-0.526,0.02-0.991-0.366-1.047-0.896c-0.304-2.945-0.77-5.395-3.388-5.519c-0.038-0.002-0.076-0.003-0.114-0.003 c-2.282,0-2.814,3.342-2.836,3.486c-0.007,0.039-0.202,1.212,0.184,2.434c0.485,1.536,1.632,2.439,3.504,2.762 c5.835,1.002,6.124,4.406,6.12,5.106c0.041,0.452,0.142,2.513-1.194,4.134c-0.957,1.161-2.387,1.812-4.25,1.933 c-2.208,0.14-3.963-0.324-5.22-1.389v3.338C19.662,36.906,19.215,37.354,18.662,37.354z" />
              </svg>
            </span>
            <span>Scratch</span>
          </a>

          <!-- YouTube -->
          <a
            href="https://www.youtube.com/@Calvare16"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="YouTube"
            class="group inline-flex items-center gap-3 px-6 py-3 rounded-xl text-white font-medium transition-all duration-300 hover:scale-105 bg-red-600 hover:bg-red-600/80 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-900 focus-visible:ring-white/60 shadow-sm shadow-black/20"
          >
            <span class="transition-transform duration-300 group-hover:scale-110 flex items-center">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
              </svg>
            </span>
            <span>YouTube</span>
          </a>
        </div>
      </section>
    </div>

    <!-- Custom Styles -->
    <style>
      @keyframes spin-slow {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }
      
      .animate-spin-slow {
        animation: spin-slow 3s linear infinite;
      }
      
      /* Smooth scrolling */
      html {
        scroll-behavior: smooth;
      }
    </style>
  </main>
</Layout>
