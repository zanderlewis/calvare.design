---
interface Props {
    method: string;
    value: string;
    href: string;
}

const { method, value, href} = Astro.props;
---

<a
    href={href}
    target="_blank"
    class={`group flex items-center justify-center gap-3 bg-gray-800/30 p-4 rounded-xl backdrop-blur-sm border border-white/10 hover:border-white/20 transition-all duration-300 hover:transform hover:-translate-y-1`}
>
    <div class="text-2xl"></div>
    <div class="text-left">
        <slot name="icon" />
        <p class="text-gray-400 text-sm">{method}</p>
        <p class="text-white font-semibold">{value}</p>
    </div>
</a>
